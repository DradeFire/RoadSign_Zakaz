<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="60dp"
    android:background="@drawable/f1">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edR2Text1"
        android:layout_width="32dp"
        android:layout_height="52dp"
        android:layout_marginStart="6dp"
        android:backgroundTint="#00FFFFFF"
        android:ems="10"
        android:fontFamily="@font/roadn_font"
        android:hint="лю"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="1"
        android:nextFocusForward="@+id/edR2Num1"
        android:paddingBottom="6dp"
        android:textAlignment="center"
        android:textSize="46dp"
        android:textStyle="bold"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edR2Text2"
        android:layout_width="32dp"
        android:layout_height="52dp"
        android:backgroundTint="#00FFFFFF"
        android:ems="10"
        android:fontFamily="@font/roadn_font"
        android:hint="лю"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="1"
        android:nextFocusForward="@+id/edR2Text3"
        android:paddingBottom="6dp"
        android:textAlignment="center"
        android:textSize="46dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edR2Num3" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edR2Num1"
        android:layout_width="32dp"
        android:layout_height="60dp"
        android:backgroundTint="#00FFFFFF"
        android:ems="10"
        android:fontFamily="@font/roadn_font"
        android:hint="9"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="1"
        android:nextFocusForward="@+id/edR2Num2"
        android:paddingBottom="6dp"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edR2Text1" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edR2Num2"
        android:layout_width="32dp"
        android:layout_height="60dp"
        android:backgroundTint="#00FFFFFF"
        android:ems="10"
        android:fontFamily="@font/roadn_font"
        android:hint="9"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="1"
        android:nextFocusForward="@+id/edR2Num3"
        android:paddingBottom="6dp"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edR2Num1" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edR2Num3"
        android:layout_width="32dp"
        android:layout_height="60dp"
        android:backgroundTint="#00FFFFFF"
        android:ems="10"
        android:fontFamily="@font/roadn_font"
        android:hint="9"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="1"
        android:nextFocusForward="@+id/edR2Text2"
        android:paddingBottom="6dp"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edR2Num2" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edR2Text3"
        android:layout_width="32dp"
        android:layout_height="52dp"
        android:backgroundTint="#00FFFFFF"
        android:ems="10"
        android:fontFamily="@font/roadn_font"
        android:hint="лю"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="1"
        android:nextFocusForward="@+id/edR2Num4"
        android:paddingBottom="6dp"
        android:textAlignment="center"
        android:textSize="46dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edR2Text2" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edR2Num4"
        android:layout_width="25dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#00FFFFFF"
        android:ems="10"
        android:fontFamily="@font/roadn_font"
        android:hint="9"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="1"
        android:nextFocusForward="@+id/edR2Num5"
        android:textAlignment="center"
        android:textSize="38dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
